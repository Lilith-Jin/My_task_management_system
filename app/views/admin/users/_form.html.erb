
  <%= form_with(model: user, url: url, data: {turbo: false}, html:{class: "space-y-6"}) do |u| %>
    <div>
      <%= u.label :name, class: "block text-lg font-medium text-gray-700" %>
      <div class="mt-1">
        <%= u.text_field :name, class:" user_field " + (u.object.errors[:name].present? ? 'border-rose-500' : 'border-gray-300')  %>
      </div>
      <% if u.object.errors[:name]%>
        <span class="block text-sm font-medium text-rose-500" ><%= u.object.errors[:name][0] %></span>
      <% end %>
    </div>

    <div>
      <%= u.label :email, class: "block text-lg font-medium text-gray-700" %>
      <div class="mt-1">
        <%= u.email_field :email, class:" user_field " + (u.object.errors[:email].present? ? 'border-rose-500' : 'border-gray-300') %>
      </div>
      <% if u.object.errors[:email]%>
        <span class="block text-sm font-medium text-rose-500" ><%= u.object.errors[:email][0] %></span>
      <% end %>
    </div>

    <div>
      <%= u.label :password, class: "block text-lg font-medium text-gray-700" %>
      <div class="mt-1">
        <%= u.password_field :password, class:" user_field " + (u.object.errors[:password].present? ? 'border-rose-500' : 'border-gray-300') %>
      </div>
      <% if u.object.errors[:password]%>
        <span class="block text-sm font-medium text-rose-500"><%= u.object.errors[:password][0] %></span>
      <% end %>
    </div>

    <div>
      <%= u.label :password_confirmation, class: "block text-lg font-medium text-gray-700" %>
      <div class="mt-1">
        <%= u.password_field :password_confirmation, class:" user_field " + (u.object.errors[:password_confirmation].present? ? 'border-rose-500' : 'border-gray-300') %>
      </div>
      <% if u.object.errors[:password_confirmation]%>
        <span class="block text-sm font-medium text-rose-500"><%= u.object.errors[:password_confirmation][0] %></span>
      <% end %>
    </div>

      <div>
        <%= u.label :role, t("user.column.role")%>
        <div class="mt-1">
          <%= select(:user, :role, option_for_role_select(User.roles.keys), {}, class:"appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm")%>
        </div> 
      </div>

      <div class="mt-4 mb-4"> 
        <div>
          <button><%= u.submit btn_label , class:" submit_button " %></button>
        </div>
      </div>
  <% end %>
