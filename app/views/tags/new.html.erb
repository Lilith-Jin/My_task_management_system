<div class="bg-indigo-50 min-h-screen md:px-20 pt-6">
  <div class=" bg-white rounded-md px-6 py-10 max-w-2xl mx-auto">
    <%= form_with(model: @tag, url: task_tags_path, data: {turbo: false}) do |t| %>
      <% if @tag.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @tag.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="space-y-4">
        <div class="fields flex space-x-4">
          <%= t.label :name, class: "text-lx" %>
          <%= t.text_field :name, class:"ml-2 outline-none py-1 px-2 text-md border-2 rounded-md" %>
        </div>
        <button><%= t.submit t("tag.action.new"), class:" px-6 py-2 mx-auto block rounded-md text-lg font-semibold bg-sky-600 hover:bg-sky-700 text-white cursor-pointer " %></button>
      </div>
    <% end %>
  </div>
</div>
